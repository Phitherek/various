#!/bin/bash
echo RSAChn script - written in 2010 by Phitherek_
echo Making backup of existing RSA keys...
mkdir `dirname $0`/rsachn_backup
cp ~/.ssh/id_rsa.pub ~/.ssh/id_rsa `dirname $0`/rsachn_backup
echo Writing RSA keys from rsachn_keys directory...
cp `dirname $0`/rsachn_keys/* ~/.ssh
echo Running command: $@...
$@
echo Restoring backup...
cp `dirname $0`/rsachn_backup/* ~/.ssh
echo Removing backup files...
rm -r `dirname $0`/rsachn_backup
echo Done! Thank you for using RSAChn script!
